    "build:remote": "cd apps/applets/remote_app && vite build",
    "build:host": "cd apps/applets/host-app && vite build",
    "build:host-bare": "cd apps/applets/host-app-bare && vite build",
    "preview:host": "cd apps/applets/host-app && vite preview --port 5000",
