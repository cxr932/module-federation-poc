    "preview:remote": "cd apps/applets/remote_app && vite preview --port 5001 --strictPort",
    "build:all": "concurrently 'npm run build:remote' 'npm run build:host-bare'",
    "preview:all": "concurrently 'npm run preview:remote' 'npm run preview:host-bare'"
